<main>
  <div class="swiper-container">
    <h3>PRODUCTOS</h3>
    <div class="swiper-filter">
      <h4>FILTROS:</h4>
      <div class="groupFilter">
        <p class="titleFilter">CATEGEGORIAS</p>
        <div>
          {{#each category}}<a>{{this}}</a>{{/each}}
        </div>
      </div>
      <div class="groupFilter">
        <p class="titleFilter">ORDEN:</p>
        <div>
          <a>Sin orden</a>
          <a>Ascendente</a>
          <a>Descendete</a>
        </div>
      </div>
      <div class="groupFilter">
        <p class="titleFilter">STOCK:</p>
        <div>
          <a>Todos</a>
          <a>Con Stock</a>
        </div>
      </div>
    </div>
    <div class="swiper-wrapper">
      {{#each product}}
      <div class="swiper-slide">
        <img src={{this.thumbnail}}>
        <p class="sw-title">{{this.title}}</p>
        <p class="sw-price">$ {{this.price}}</p>
      </div>
      {{/each}}
    </div>
    <div class="swiper-pagination">
      {{#if hasPrevPage}} <a id="prevPage" href="{{prevLink}}"><i class='bx bx-chevrons-left'></i></a>{{/if}}
      <p id="pages"><span id="thisPage">{{page}}</span> de <span id="totalPages">{{totalPages}}</span></p>
      {{#if hasNextPage}}<a id="nextPage" href="{{nextLink}}"><i class='bx bx-chevrons-right'></i></a>{{/if}}
    </div>
  </div>
</main>

<script src={{scriptPlus}}></script>
<script src={{scriptView}}></script>